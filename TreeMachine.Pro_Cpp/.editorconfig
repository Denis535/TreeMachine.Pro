# Visual Studio generated .editorconfig file with C++ settings.
root = true

[*.{c++,cc,cpp,cppm,cxx,h,h++,hh,hpp,hxx,inl,ipp,ixx,tlh,tli}]

# Visual C++ Code Style settings

cpp_generate_documentation_comments = xml

# Visual C++ Formatting settings

indent_style = space   # Использовать пробелы для отступов
indent_size = 4        # Количество пробелов в одном отступе
tab_width = 4          # Ширина табуляции при отображении (если табы используются)

cpp_indent_braces = false                                  # Правило отступов для фигурных скобок
cpp_indent_multi_line_relative_to = innermost_parenthesis  # Базовая точка отсчёта для многострочных выражений
cpp_indent_within_parentheses = indent                     # Правило отступов для содержимого внутри скобок
cpp_indent_preserve_within_parentheses = false             # Сохранять ли существующие отступы внутри скобок
cpp_indent_case_contents = true                            # Правило отступов для содержимого внутри case-блоков
cpp_indent_case_labels = false                             # Правило отступов для меток case
cpp_indent_case_contents_when_block = false                # Поведение отступов внутри case, если используется блок
cpp_indent_lambda_braces_when_parameter = false            # Отступы для лямбда-фигурных скобок, если они как параметры
cpp_indent_goto_labels = one_left                          # Правило размещения отступов для меток goto
cpp_indent_preprocessor = leftmost_column                  # Расположение препроцессорных директив по отступам
cpp_indent_access_specifiers = false                       # Правило отступов для public/private/protected
cpp_indent_namespace_contents = true                       # Отступы для содержимого внутри namespace
cpp_indent_preserve_comments = false                       # Сохранять ли исходные отступы у комментариев

cpp_new_line_before_open_brace_namespace = ignore          # Правило переноса строки перед фигурной скобкой в namespace
cpp_new_line_before_open_brace_type = ignore               # Правило переноса строки перед фигурной скобкой в определении класса/структуры
cpp_new_line_before_open_brace_function = ignore           # Правило переноса строки перед фигурной скобкой функции
cpp_new_line_before_open_brace_block = ignore              # Правило переноса строки перед фигурной скобкой в блоках if/for/while и т.п.
cpp_new_line_before_open_brace_lambda = ignore             # Правило переноса строки перед фигурной скобкой в лямбда-функции
cpp_new_line_scope_braces_on_separate_lines = false        # Расположение скобок области видимости на отдельных строках
cpp_new_line_close_brace_same_line_empty_type = false      # Закрывающая скобка для пустого типа на той же строке
cpp_new_line_close_brace_same_line_empty_function = false  # Закрывающая скобка для пустой функции на той же строке
cpp_new_line_before_catch = true                           # Перенос строки перед блоком catch
cpp_new_line_before_else = true                            # Перенос строки перед else
cpp_new_line_before_while_in_do_while = false              # Перенос строки перед while в конструкции do-while

cpp_space_before_function_open_parenthesis = remove         # Пробел перед открывающей скобкой у объявления/вызова функции
cpp_space_within_parameter_list_parentheses = false         # Пробелы внутри скобок списка параметров
cpp_space_between_empty_parameter_list_parentheses = false  # Пробел между пустыми круглыми скобками (например, `()`)
cpp_space_after_keywords_in_control_flow_statements = true  # Пробел после ключевых слов управления потоком (if, for, while и т.п.)
cpp_space_within_control_flow_statement_parentheses = false # Пробелы внутри скобок условий управления потоком
cpp_space_before_lambda_open_parenthesis = false            # Пробел перед скобкой параметров у лямбда-функции
cpp_space_within_cast_parentheses = false                   # Пробелы внутри скобок приведения типов
cpp_space_after_cast_close_parenthesis = false              # Пробел после закрывающей скобки приведения типов
cpp_space_within_expression_parentheses = false             # Пробелы внутри скобок выражений
cpp_space_before_block_open_brace = true                    # Пробел перед открывающей фигурной скобкой блока
cpp_space_between_empty_braces = false                      # Пробел между пустыми фигурными скобками `{ }`
cpp_space_before_initializer_list_open_brace = false        # Пробел перед открытием списка инициализации
cpp_space_within_initializer_list_braces = true             # Пробелы внутри фигурных скобок списка инициализации
cpp_space_preserve_in_initializer_list = true               # Сохранять пробелы в списках инициализации как есть
cpp_space_before_open_square_bracket = false                # Пробел перед открывающей квадратной скобкой
cpp_space_within_square_brackets = false                    # Пробелы внутри квадратных скобок
cpp_space_before_empty_square_brackets = false              # Пробел перед пустыми квадратными скобками
cpp_space_between_empty_square_brackets = false             # Пробел между пустыми квадратными скобками
cpp_space_group_square_brackets = true                      # Группировать `[]` без пробелов между ними
cpp_space_within_lambda_brackets = false                    # Пробелы внутри квадратных скобок лямбда-выражения
cpp_space_between_empty_lambda_brackets = false             # Пробел между пустыми скобками в лямбде `[]`
cpp_space_before_comma = false                              # Пробел перед запятой
cpp_space_after_comma = true                                # Пробел после запятой
cpp_space_remove_around_member_operators = true             # Удалять пробелы вокруг операторов доступа (`.` и `->`)
cpp_space_before_inheritance_colon = true                   # Пробел перед двоеточием при наследовании
cpp_space_before_constructor_colon = true                   # Пробел перед двоеточием в списке инициализации конструктора
cpp_space_remove_before_semicolon = true                    # Удалять пробел перед точкой с запятой
cpp_space_after_semicolon = true                            # Пробел после точки с запятой (внутри одной строки)
cpp_space_remove_around_unary_operator = true               # Удалять пробелы вокруг унарных операторов
cpp_space_around_binary_operator = insert                   # Поведение пробелов вокруг бинарных операторов
cpp_space_around_assignment_operator = insert               # Поведение пробелов вокруг оператора присваивания
cpp_space_pointer_reference_alignment = left                # Выравнивание пробелов с указателями и ссылками
cpp_space_around_ternary_operator = insert                  # Пробелы вокруг тернарного оператора (`? :`)

cpp_wrap_preserve_blocks = one_liners                       # Управление переносом строк в блоках: сохранять однострочные блоки

cpp_use_unreal_engine_macro_formatting = true               # Использовать форматирование макросов в стиле Unreal Engine

# Visual C++ Include Cleanup settings

cpp_includes_style = default                                    # Стиль сортировки и форматирования include-директив
cpp_includes_use_forward_slash = true                           # Формат записи путей в include-директивах

cpp_sort_includes_error_tag_type = none                         # Поведение при несортированных include-директивах
cpp_sort_includes_priority_style = angled                       # Приоритет между кавычками и угловыми скобками при сортировке
cpp_sort_includes_priority_case_sensitive = false               # Учитывать ли регистр при сортировке includes

cpp_include_cleanup_add_missing_error_tag_type = suggestion     # Поведение при обнаружении недостающих include-директив
cpp_include_cleanup_remove_unused_error_tag_type = dimmed       # Поведение при обнаружении неиспользуемых include-директив
cpp_include_cleanup_optimize_unused_error_tag_type = suggestion # Поведение при оптимизации include-директив
cpp_include_cleanup_sort_after_edits = false                    # Выполнять ли сортировку после автоматических правок includes
